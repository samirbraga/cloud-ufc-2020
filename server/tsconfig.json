{
  "compilerOptions": {
    "target": "es2017",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "bin",
    "esModuleInterop": true,
    "module": "commonjs"
  },
  "include": [
      "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}